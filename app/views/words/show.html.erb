<div class="col-xs-5"> 
<h1>作品詳細</h1>
  <table class="table">
    <tr>
    
    </tr>
    <tr>
      <td><%= @word.word %></td>
    </tr>
    <tr>
      <td><%= render 'words/tag_list', tag_list: @word.tag_list %></td>
    </tr>
    <tr>
      <td><%= @word.user.name %></td>
      <td>
        <div class="favorites_buttons_<%= @word.id %>">
           <%= render partial: 'favorites/favorite', locals: { word: @word} %>
        </div>
      </td>
    </tr>
  </table>

  <table class="table">
  <tbody>
    <tr>
      <h3>コメント一覧</h3>

      <td><% @word.comments.each do |comment| %></td>
      
      </td>
    </tr>
        <tr>  
        <td>
          <%= attachment_image_tag(comment.user, :image, :fill, 30, 30, fallback: "no_image.jpg") %>
          <p><%= comment.user.name %></p>
        </td>
        <td>
        <h4 class="mb-3">評価：<%= comment.rate %>点
      </td>
        <td>
        <div id="star-rate-<%= comment.id %>"></div>
        </td>
        <td><%= comment.comment %></td>
        <% if comment.user == current_user %>
        <td> <%= link_to "Edit", edit_word_comment_path(comment.word, comment),class: "btn-sm btn-success" %></td>
        <td><%= link_to '削除',word_comment_path(comment.word, comment), method: :delete,data: {confirm:'削除してもよろしいですか？'},class: "btn-sm btn-danger" %></td>
        </tr>
        <% end %>
      <% end %>
    </tr>
  </tbody>
  </table>

    <%= form_for [@word, @comment] do |f| %>
      <div class="form-group row" id="star">
      <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
      <%= f.hidden_field :rate, id: :review_star %>
    </div>
    <script>
    $('#star').raty({
      size     : 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      scoreName: 'comment[rate]',
      half: true,
    });
    </script>  
      <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %><br>
      <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
    <% end %>
</div>